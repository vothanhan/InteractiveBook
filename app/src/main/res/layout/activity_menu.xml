<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:gravity="center_vertical">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".menu"
    android:gravity="center_vertical"
    android:id="@+id/menu">
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/cinderella"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="onclick"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/harrypotter"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="onclick"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/cinderella" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/snowwhite"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="onclick"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/harrypotter" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/batb"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="onclick"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/snowwhite" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/rapunzel"
        android:onClick="onclick"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/batb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cinderella"
        android:id="@+id/textView2"
        android:layout_below="@+id/cinderella"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Harry Potter Book 1"
        android:id="@+id/textView3"
        android:layout_below="@+id/harrypotter"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Snow White"
        android:id="@+id/textView4"
        android:layout_below="@+id/snowwhite"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Beauty and The Beast"
        android:id="@+id/textView5"
        android:layout_below="@+id/batb"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rapunzel"
        android:id="@+id/textView6"
        android:layout_below="@+id/rapunzel"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animating Icon"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>